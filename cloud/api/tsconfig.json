{
	"extends": "tsconfig/base.json",
	"compilerOptions": {
		"module": "ESNext",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "ESNext",
		"moduleResolution": "Node16",
		"outDir": "./dist",
		"rootDir": "./src"	
	},
	"ts-node": {
        "esm": true
    },
    "lib": ["esnext"],
	"include": ["src"],
	"exclude": ["node_modules", "src/tests"]
}
