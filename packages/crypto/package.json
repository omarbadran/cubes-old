			"<rootDir>/dist"
		]
	},
	"devDependencies": {
		"@types/jest": "^28.1.7",
		"@types/node": "^18.7.6",
		"jest": "^28.1.3",
		"rimraf": "^3.0.2",
		"ts-jest": "^28.0.8",
		"typescript": "^4.7.4",
		"@cubes/tsconfig": "*"
	},
	"dependencies": {
		"hypercore-crypto": "^3.3.0"
